<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subject</title>
    <link type="text/css" rel="stylesheet" href="/style.css">
  </head>

  <body>
    <h1>Subject Data</h1>
    <div class="title">
      <table border="1">
        <tr>
          <th> ID </th>
          <th> Subject Name</th>
        </tr>
        <%subject_data.forEach(s => { %>
          <tr>
            <td><%= s.id %> </td>
            <td><%= s.subject_name %></td>
            <td><a href="subjects/edit/<%= s.id %>">edit</a></td>
            <td><a href="subjects/delete/<%= s.id %>">delete</a></td>
          </tr>
        <% }) %>
      </table>
      <br>
      <br>
      <form action="/subjects" method="post">
        <input type = "text" name="nama_teacher" placeholder="subject name"></input>
        <button type="submit">Add Subject</button>
      </form>
      <br>
      <br>
      <a href="/">home</a>
    </div>
  </body>
</html>
