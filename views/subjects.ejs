<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subject</title>
    <link type="text/css" rel="stylesheet" href="/style.css">
  </head>

  <body>
    <h1>All Subjects Data</h1>

    <div class="title">
      <table border="1">
        <tr>
          <th> ID </th>
          <th> Subject Name</th>
          <th> Teacher</th>
          <th> Actions </th>
        </tr>
        <%subject_data.forEach(s => { %>
          <tr>
            <td><%= s.id %> </td>
            <td><%= s.subject_name %></td>
            <td><%var i = 1; s.Teachers.forEach(t => { %>
                <%=i++ %>. <%= t.first_name %> <%=t.last_name %><br>
                <% }) %></td>
            <td><a href="/subjects/<%=s.id%>/enrolledstudents">Enrolled Students</a></td>
          </tr>
        <% }) %>
      </table>
      <br>
      <br>
      <a href="/">home</a>
    </div>
  </body>
</html>
