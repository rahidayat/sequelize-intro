<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Teachers</title>
    <link type="text/css" rel="stylesheet" href="/style.css">
  </head>

  <body>
    <%- include layout/menu-bar %>
    <h1>Add Teachers Data</h1>
    <h3><a href="/teachers">show all data</a></h3>

    <form action="/teachers/add" method="post">
      <label>First Name</label>
      <input type = "text" name="first_name"></input><br><br>
      <label>Last Name</label>
      <input type = "text" name="last_name"></input><br><br>
      <label>Email</label>
      <input type = "text" name="email"></input><br><br>
      <label>Pilih Subject</label>
      <select name= "SubjectId">
        <% subject_data.forEach(s => { %>
        <option value="<%= s.id %>"><%= s.subject_name %></option>
        <% }) %>
      </select><br><br>
      <button type="submit">Add Teacher</button>
    </form>
    <br>
    <br>
    <a href="/">home</a>
  </body>
</html>
