<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%- include layout/page-title %>
    <link type="text/css" rel="stylesheet" href="/style.css">
  </head>

  <body>
    <%- include layout/menu-bar %>
    <h1>Students Data</h1>
    <h4><a href="/students/add">add student</a></h4>
    <div class="title">
      <table border="1">
        <tr>
          <th> No </th>
          <th> First Name</th>
          <th> Last Name</th>
          <th> Email</th>
          <th> Actions</th>
          <th> Options</th>
        </tr>
        <% var i=1; students_data.forEach(s => { %>
          <tr>
            <td><%= i++ %> </td>
            <td><%= s.first_name %></td>
            <td><%= s.last_name %></td>
            <td><%= s.email %></td>
            <td><a href="students/<%= s.id %>/addsubject">Add Subject</a></td>
            <td><a href="students/edit/<%= s.id %>">edit</a> | <a href="students/delete/<%= s.id %>">delete</a> </td>
          </tr>
        <% }) %>
      </table>
      <br>
      <br>

      <a href="/">home</a>
    </div>
  </body>
</html>
