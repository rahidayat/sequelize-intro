<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Subject to Student</title>
    <link type="text/css" rel="stylesheet" href="/style.css">
  </head>

  <body>
    <%- include layout/menu-bar %>
    <h1>Add Subject to Student</h1>

    <div class="title">
      <%students_data.forEach(s => { %>
      <form action="/students/<%=s.id%>/addsubject" method="post">
       First Name: <%= s.first_name %><br>
       Last Name: <%= s.last_name %><br>
       Email: <%= s.email %><br>
       <% }) %>
       <br>
       Choose Subject
        <select name= "SubjectId" class="form_control">
          <% subjects_data.forEach(s => { %>
          <option value="<%= s.id %>"><%= s.subject_name %></option>
        <% }) %>
        </select><br><br>
      <button type="submit" name="">Add Subject</button>
    </form>
      <br>
      <br>
      <a href="/">home</a>
    </div>
  </body>
</html>
